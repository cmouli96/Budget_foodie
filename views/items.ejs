 <%= restaurant["swiggyLink"] %>
</p>
<%= restaurant["items"].length%> <span>ITEMS</span>
<!-- <a href="/toppick">GoBack!!</a> -->
    <ul>
      <% restaurant["items"].forEach(function(item){ %>
      <div class="id">
        <Strong class="item">
          <%= item["itemName"] %>
         </Strong>
         <button class="Add">Add</button>
            <button class="Remove">Remove</button>
            <p class="ztoPrice">
              <%=  item["ztoPrice"] %>
            </p>
            <p class="sgyPrice">
              <%= item["sgyPrice"] %>
            </p>  

       </div>   
    <% }) %>
    </ul>

