<div class="rest">
  <h1> <%= restaurant["restaurantName"]%></h1>
  <h6><%= restaurant["tag"]%></h6>
  <h6><%= restaurant["address"]%></h6>
  <div class="rating">
    <span class="r">
      <%= restaurant["rating"]  -%>
    </span>
    <span>
      <%= restaurant["peopleRated"] %>
    </span>
  </div>
 
</div>

<p class="ztoLink">
  <%= restaurant["zomatoLink"] %>
</p>
